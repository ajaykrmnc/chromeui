{
  "manifest_version": 3,
  "name": "VimTab Manager",
  "version": "1.0.0",
  "description": "Manage Chrome tabs with Vim-like keybindings in a Neovim TUI-style interface",
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "history"
  ],
  "action": {
    "default_title": "Open VimTab Manager"
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Open VimTab Manager"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}

